<html>

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ez List</title>
    <script
      src="https://kit.fontawesome.com/7be49024ef.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body class="text-center">
    <nav class="navbar p-3 bg-secondary">
      <a href="/">
        <div class="fs-4">Home</div>
      </a>
      <a href="/viewallusers">
        <div class="fs-4">Users</div></a>
      <div class="btn-group">
        <a href="/profile">
          <div class="fs-4">View Profile</div>
        </a>
        <button type="button" class="btn" data-bs-toggle="dropdown" id="logBtn">
        <div class="fs-5">Login/Logout</div>
        </button>

        <ul class="dropdown-menu">
          {{#if loggedIn}}
            <li>
              <button class="dropdown-item" type="button" id="logoutBtn">Logout</button>
            </li>
          {{else}}
            <li><a href="/login">Login</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>

    <main>
      <div class="container my-4">
        {{{body}}}
      </div>
    </main>

    <script src="/js/logout.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>

</html>