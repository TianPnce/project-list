{{! search for specific user }}
<form id="searchUser" class="my-3">
  <div class="col-sm-10 input-group">
    <input
      type="text"
      class="form-control"
      id="searchUsername"
      placeholder="search users"
    />
  </div>
</form>

<div class="row row-cols-1 row-cols-md-2 g-4 mt-2">
  {{#each this}}
    <div class="col">
      <div class="card">
        <div class="card-body">
          <a href="/api/users/{{id}}"><h5>{{username}}</h5></a>
          <p>{{first_name}} {{last_name}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<script src="/js/user.js"></script>